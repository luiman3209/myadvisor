{
  "development": {
    "use_env_variable": "DATABASE_URL_LOCAL",
    "dialect": "postgres",
    "dialectOptions": {},
    "define": {
      "schema": "myadvisor"
    }
  },
  "test": {
    "dialect": "sqlite",
    "storage": ":memory:",
    "logging": false
  },
  "production": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "dialectOptions": {
      "ssl": {
        "require": true,
        "rejectUnauthorized": false
      }
    },
    "define": {
      "schema": "myadvisor"
    }
  }
}